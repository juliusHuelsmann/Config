run_watch DHCP {
  pidfile = "/var/run/dhclient*.pid"
}



cpu_usage {
  format = " cpu %usage "
}

load {
  format = " load %1min "
# max_threshold = 0.3
}

disk "/" {
# format = " hdd %avail "
  format = " ⛁ %avail "
}


