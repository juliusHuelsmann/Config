tztime berlin {
  format = "berlin:'%y-%m-%d_%H:%M:%S"
  timezone = "Europe/Berlin"
}
tztime dublin {
  format = "dublin:%H:%M"
  timezone = "Europe/Dublin"
}

tztime nyc {
  format = "nyc:%H:%M"
  timezone = "US/Eastern"
}

tztime utc {
  format = "utc:%H:%M"
  timezone = "Etc/UTC"
}
